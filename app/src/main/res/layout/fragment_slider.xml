<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#48B2E7">


    <TextView
        android:id="@+id/tvText"
        android:text="Добро\nпожаловать"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"/>


    <ImageView
        android:src="@drawable/image_1"
        android:id="@+id/imView"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="90dp"/>



    <TextView
        android:id="@+id/nachPut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="Начнём\nпутешествие"
        android:textSize="34sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/UmnTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:text="Умная, великолепная и модная\nколлекция Изучите сейчас"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginHorizontal="30dp"
        android:visibility="gone"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="126dp">

        
        <LinearLayout
            android:id="@+id/linerWhite1"
            android:layout_width="43dp"
            android:layout_height="5dp"
            android:background="@drawable/borderwhite"
            android:orientation="horizontal" />
        
        <LinearLayout
            android:id="@+id/linerWhite2"
            android:layout_width="28dp"
            android:layout_height="5dp"
            android:background="@drawable/border"
            android:layout_marginStart="12dp"
            android:orientation="horizontal" />
        
        <LinearLayout
            android:id="@+id/linerWhite3"
            android:layout_width="28dp"
            android:layout_height="5dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/border"
            android:orientation="horizontal" />


    </LinearLayout>




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/backbtn"
        android:layout_marginHorizontal="20dp"
        android:text="Начать"
        android:textAllCaps="false"
        />


</LinearLayout>
